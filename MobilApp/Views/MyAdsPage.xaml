<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MobilApp_Szakdolgozat.ViewModels"
             x:Class="MobilApp_Szakdolgozat.Views.MyAdsPage"
             Title="MyAdsPage">
    <ContentPage.BindingContext>
        <vm:MyAdsViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="40,auto" ColumnDefinitions="*,16*,*">
        <CollectionView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" 
                           Padding="3" 
                           Margin="10">
                        <Grid ColumnDefinitions="*,3*" RowDefinitions="*,*,*">
                            <Image Source="{Binding}"
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="BTNNewAd" 
                Grid.Row="0"
                Grid.Column="1"
                Text="Új hirdetés" 
                Clicked="BTNNewAd_Clicked"/>
    </Grid>
</ContentPage>