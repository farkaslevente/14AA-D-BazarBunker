<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilApp_Szakdolgozat.Views.PPCatalogPage"
             Title="">
    <!--CollectionView:
    https://www.youtube.com/watch?v=gf6abNRAhuY-->
    <CollectionView x:Name="ppCW"
                    ItemsLayout="VerticalGrid,3">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout BackgroundColor="Beige" Padding="5" Margin="5">
                    <!--<Button ImageSource="{}"/>-->
                    <Label Text="{Binding ppList}" HorizontalOptions="Center" HeightRequest="100" WidthRequest="100"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>