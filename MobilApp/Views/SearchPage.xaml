<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilApp_Szakdolgozat.Views.SearchPage"
             Title="SearchPage">
    <Grid ColumnDefinitions="*,7*,*">
        <Label Text="E-mail cím:" Grid.Column="1"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,15" Grid.Column="1">
            <Entry FontSize="18" Placeholder="E-mail cím" Margin="5,0,5,0"
  Text="{Binding email}"/>
        </Frame>
    </Grid>
</ContentPage>