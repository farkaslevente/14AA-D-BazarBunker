<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilApp_Szakdolgozat.Views.AdsPage"
             Title="AdsPage">
    <CollectionView ItemsSource="{Binding}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                    <Grid RowDefinitions="1*,1*,1*" ColumnDefinitions="1*,3*">
                        <Image Source="{Binding}" 
                            Grid.RowSpan="3" 
                            Grid.Column="0"/>

                        <Label x:Name="LBLAdName" 
                            Text="{Binding}" 
                            Grid.Row="0" 
                            Grid.Column="1"
                            FontAttributes="Bold"/>

                        <Label x:Name="LBLAdLoc" 
                            Text="{Binding}" 
                            Grid.Row="1" 
                            Grid.Column="1"/>

                        <Label x:Name="LBLAdPrice" 
                            Text="{Binding}" 
                            Grid.Row="2" 
                            Grid.Column="1"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>