<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilApp_Szakdolgozat.Views.ProfilePage"
             Title="">
    <ContentPage.Resources>
        <Style x:Key="GridStyle" TargetType="Grid">
            <Setter Property="Padding" Value="0,10"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout Margin="0,-10,0,0">

        <Grid ColumnDefinitions="1*,16*,1*" RowDefinitions="230*,60*,60*,23*,60*,23*,60*,23*,60*,23*,60*,70*">
            <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                <Grid>
                    <Image Source="https://t3.ftcdn.net/jpg/05/63/82/34/360_F_563823429_QCyXquX6ro9EwgtOE2Ai4BJbCuMJdNpS.jpg" 
                           MaximumHeightRequest="180" 
                           MaximumWidthRequest="180" 
                           Aspect="AspectFill"/>

                    <Rectangle RadiusX="300" 
                               StrokeThickness="40" 
                               RadiusY="300" 
                               Stroke="White" 
                               HeightRequest="260" 
                               WidthRequest="260"/>
                </Grid>

                <ImageButton x:Name="ProfilePicChangeBTN" 
                             Source="add.svg" 
                             MaximumHeightRequest="50"
                             MaximumWidthRequest="50"
                             Margin="-70,0,0,30" 
                             VerticalOptions="End"
                             Clicked="ProfilePicChangeBTN_Clicked"/>

            </StackLayout>
            <Label x:Name="NameLB" Grid.Row="1" Text="Teszt Elek" Grid.Column="1" 
                   HorizontalTextAlignment="Center"
                   FontSize="Large"
                   Margin="0,-30,0,10"/>

            <Grid Grid.Row="2" Grid.Column="1" Style="{StaticResource GridStyle}" 
                  RowDefinitions="*,*" MaximumHeightRequest="100">
                <Border Stroke="White"
                        StrokeThickness="2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="45,45,45,45" />
                    </Border.StrokeShape>
                    
                         <Entry x:Name="NameEntry"
                                Placeholder="Teszt Elek" 
                                PlaceholderColor="Gray"                                                       
                                Margin="30,0,30,0"/>
                </Border>

                <Button x:Name="NameChangeBTN"
                        Text="Név megváltoztatása"
                        MaximumHeightRequest="40"
                        Margin="30,0"
                        Clicked="NameChangeBTN_Clicked"/>

                <Button Grid.Row="1"
                        x:Name="NameSaveBTN"
                        Text="Változtatás mentése"
                        MaximumHeightRequest="40"
                        Margin="30,0"
                        Clicked="NameSaveBTN_Clicked"/>
            </Grid>
            <CollectionView Grid.Column="1" Grid.Row="4" Grid.RowSpan="5">
            </CollectionView>

        </Grid>



    </VerticalStackLayout>
</ContentPage>